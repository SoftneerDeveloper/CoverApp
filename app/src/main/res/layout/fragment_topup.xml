<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="ke.co.coverapp.coverapp.fragments.TopUpFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="70dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="@dimen/dimen_8dp"
            android:orientation="vertical"
            android:paddingBottom="70dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:weightSum="2"
                    android:padding="@dimen/dimen_8dp"
                    android:orientation="horizontal">
                <Button
                    android:id="@+id/refresh_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="@font/titillium_web"
                    android:text="Refresh"
                    android:textColor="@color/white" />


                        <TextView
                            android:id="@+id/top_up_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/titillium_web"
                            android:padding="16dp"
                            android:text=" Balance : kes 0.00" />


                    </LinearLayout>


        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/airtelCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:visibility="gone"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F44336"
                        android:padding="10dp"
                        android:src="@drawable/airtel_money" />

                    <TextView
                        android:id="@+id/airtel_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/airtel_menu_1"
                        android:textColor="@color/colorPrimaryText"
                        android:fontFamily="@font/titillium_web" />

                    <TextView
                        android:id="@+id/airtel_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/airtel_menu_2"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/airtel_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/airtel_menu_3"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/airtel_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/airtel_menu_4"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/airtel_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/airtel_menu_5"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/airtel_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/airtel_menu_6"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/airtel_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/airtel_menu_7"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/airtel_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/airtel_menu_8"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/airtel_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/airtel_menu_9"
                        android:textColor="@color/colorPrimaryText" />

                    <Button
                        android:id="@+id/airtelGetTID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inner_bg"
                        android:fontFamily="@font/titillium_web"
                        android:paddingTop="10dp"
                        android:text="Get Top-up Code"
                        android:textAllCaps="false" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mpesaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:visibility="gone"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#388E3C"
                        android:padding="10dp"
                        android:src="@drawable/mpesa_main" />

                    <TextView
                        android:id="@+id/mpesa_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/mpesa_menu_1"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/mpesa_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/mpesa_menu_2"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/mpesa_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/mpesa_menu_3"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/mpesa_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/mpesa_menu_4"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/mpesa_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/mpesa_menu_5"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/mpesa_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/mpesa_menu_6"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/mpesa_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/mpesa_menu_7"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/mpesa_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titillium_web"
                        android:text="@string/mpesa_menu_8"
                        android:textColor="@color/colorPrimaryText" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin"
                >
                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium_web"
                    android:text="Select a topping up option" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_weight="2">




                <android.support.v7.widget.CardView
                    android:id="@+id/crd_mpesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="2dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       >

                        <ImageButton
                            android:id="@+id/mpesa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#388E3C"
                            android:padding="30dp"
                            android:src="@drawable/mpesa_main" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/covers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:clickable="true"
                    android:elevation="2dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       >

                        <ImageButton
                            android:id="@+id/airtel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F44336"
                            android:clickable="true"
                            android:onClick="openAirtel"
                            android:padding="30dp"
                            android:src="@drawable/airtel_money" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimen_8dp"
                android:clickable="true"
                android:elevation="2dp"
                card_view:cardCornerRadius="@dimen/card_album_radius">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/visa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#2196F3"
                        android:padding="30dp"
                        android:onClick="openVisa"
                        android:src="@drawable/visa_mastercard" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/moreOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/custom_bg"
                android:fontFamily="@font/titillium_web"
                android:padding="20dp"
                android:paddingTop="10dp"
                android:text="More Options"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:visibility="gone" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
