<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            card_view:cardCornerRadius="0dp">

            <LinearLayout
                android:id="@+id/color_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/CoverTypeImageView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/home" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="White"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/home_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Cost - KES 100 per month; Your cover - KES 50,000; What's covered - Electronics"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web"
                        android:text="Maximum Cover"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/maximum_cover"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/titillium_web"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="KES 50,000" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web"
                        android:text="Monthly Premiums"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/monthly_premium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/titillium_web"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="KES 100" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium_web"
                        android:text="What's covered"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Electronics -->
                    <LinearLayout
                        android:id="@+id/category_electronics_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_electronics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titillium_web"
                            android:text="-Electronics"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/your_phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Phone - up to KES 40,000" />

                        <TextView
                            android:id="@+id/spouses_phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Spouse's phone - up to KES 40,000" />

                        <TextView
                            android:id="@+id/tablet_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Tablet- up to KES 40,000" />

                        <TextView
                            android:id="@+id/laptop_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Laptop - up to KES 60,000" />

                        <TextView
                            android:id="@+id/tv_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="TV - up to KES 60,000" />

                        <TextView
                            android:id="@+id/music_sys_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Music system- up to KES 60,000" />

                        <TextView
                            android:id="@+id/home_theatre_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Home theatre - up to KES 60,000" />

                    </LinearLayout>

                    <!-- Appliances -->
                    <LinearLayout
                        android:id="@+id/category_appliances_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_appliances"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titillium_web"
                            android:text="Appliances"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fridge_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web_extralight"
                            android:paddingLeft="20dp"
                            android:text="Fridge - up to KES 60,000"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/microwave_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Microwave - up to KES 20,000" />

                        <TextView
                            android:id="@+id/washing_machine_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Washing machine - up to KES 60,000" />

                        <TextView
                            android:id="@+id/cooker_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Cooker - up to KES 40,000" />

                    </LinearLayout>

                    <!-- Furniture -->
                    <LinearLayout
                        android:id="@+id/category_furniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_furniture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titillium_web"
                            android:text="Furniture"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sofa_sets_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Sofa sets - up to KES 50,000" />

                        <TextView
                            android:id="@+id/dining_set_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Dining set- up to KES 50,000" />

                        <TextView
                            android:id="@+id/carpets_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Carpets - up to KES 20,000" />

                        <TextView
                            android:id="@+id/beds_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Beds - up to KES 50,000" />

                        <TextView
                            android:id="@+id/curtains_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="Curtains - up to KES 30,000" />

                        <TextView
                            android:id="@+id/tv_units_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/titillium_web"
                            android:paddingLeft="20dp"
                            android:text="TV Units - up to KES 30,000" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/warmWhite"
                            android:gravity="right"
                            android:paddingTop="5dp">

                            <Button
                                android:id="@+id/button_cancel"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="right|center"
                                android:text="CANCEL"
                                android:textColor="@color/colorAccent" />

                            <Button
                                android:id="@+id/button_continue"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="right|center"
                                android:text="CONTINUE"
                                android:textColor="@color/colorAccent" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- eRROR -->
                    <LinearLayout
                        android:id="@+id/category_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titillium_web"
                            android:padding="10dp"
                            android:text="An error was encountered. Please restart the app."
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="16dp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

</RelativeLayout>