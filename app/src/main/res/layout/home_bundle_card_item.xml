<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:id="@+id/swipeCardsViewLinearLayout"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:contextClickable="true"
    android:orientation="vertical">



            <ImageView
                android:id="@+id/coverTypeImageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="15dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/textViewCoverType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web"
                android:padding="1dp"
                android:text="White"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:visibility="gone" />


            <TextView
                android:id="@+id/textViewCostPerMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web"
                android:padding="1dp"
                android:text="Cost - KES 100 per month"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />


            <TextView
                android:id="@+id/textViewYourCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web"
                android:padding="1dp"
                android:text="Your Cover- KES 50,000"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_web"
                android:padding="1dp"
                android:text="What's covered - Electronics, home appliances and furniture + accidental injury to third parties and domestic workers up to KES 2,000,000"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />


</LinearLayout>