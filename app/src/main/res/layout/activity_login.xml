<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_8dp"
    android:background="#fff"
    tools:context="ke.co.coverapp.coverapp.activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:fillViewport="true">

        <!--android:scrollbars="vertical"-->
        <!--android:scrollbarSize="0dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:layout_gravity="center_vertical"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/coverapp_vertical_logo" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="30dp"
                android:fontFamily="@font/titillium_web"
                android:padding="50dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgSignGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/log_google"
                android:visibility="gone" />

            <TextView
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:background="@color/colorDivider"
                android:fontFamily="@font/titillium_web"
                android:padding="3dp"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/login_layout_email2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/login_email2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/titillium_web"
                        android:hint="E-MAIL"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/login_layout_password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/colorDivider"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/login_password2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/titillium_web"
                        android:hint="PASSWORD"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:id="@+id/linearlayoutmasaki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/login_to_signup_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
android:backgroundTint="@color/colorPrimary"     
                        android:clickable="true"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Create Account"
                        android:textAllCaps="false"
                        android:textColor="#fff" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/login_but_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5px"
                        android:layout_weight="1"
android:backgroundTint="@color/colorPrimary"               
                        android:clickable="true"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5px"
                        android:text="Log In"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/register_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="@dimen/activity_horizontal_margin"
                android:fontFamily="@font/titillium_web"
                android:text="@string/message"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="15sp"
                android:padding="@dimen/activity_horizontal_margin"
                android:fontFamily="@font/titillium_web"
                android:text="@string/message2"
                android:textAlignment="center" />
            <LinearLayout
                android:id="@+id/login_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_margin="@dimen/dimen_8dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.rilixtech.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:ccp_enablePhoneAutoFormatter="false"
                    app:ccp_textSize="16sp"
                    android:layout_marginTop="13dp"
                    app:ccp_textFont="@font/titillium_web"
                    app:ccp_defaultNameCode="KE"
                    app:ccp_enableHint="false"
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/login_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/titillium_web"
                    android:inputType="phone"
                    android:hint="@string/enter_phone_hint" />

            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_sms_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sms_code_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/titillium_web"
                    android:hint="Enter SMS Code"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/login_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_8dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/login_layout_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/login_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/titillium_web"
                        android:hint="FIRST NAME"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/login_layout_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/login_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="@font/titillium_web"
                        android:hint="LAST NAME"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_margin="5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/titillium_web"
                    android:hint="E-MAIL"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/login_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/titillium_web"
                    android:hint="ID NUMBER"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:textColorHint="@color/colorDivider"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/titillium_web"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_layout_password_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:visibility="gone"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/login_password_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="@font/titillium_web"
                    android:hint="PASSWORD AGAIN"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/terms_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/check_terms_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:fontFamily="@font/titillium_web"
                    android:text="Accept "
                    android:theme="@style/MyCheckBox" />

                <TextView
                    android:id="@+id/text_terms_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/titillium_web"
                    android:text="terms and conditions" />

            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/regbackbutton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/titillium_web"
                    android:padding="5dp"
                    android:text="Back"
                    android:textColor="#fff"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/login_but_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:clickable="true"
                    android:fontFamily="@font/titillium_web"
                    android:text="Create Account"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/login_but_reset_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="@font/titillium_web"
                android:text="Reset Password"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:visibility="gone" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/regbackbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Back"
                        android:textColor="#fff"
                        android:visibility="gone" />
                    <Button
                        android:id="@+id/regbackbutton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Back"
                        android:textColor="#fff"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/regbackbutton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Back"
                        android:textColor="#fff"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/regbackbutton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Back"
                        android:textColor="#fff"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/regbackbutton6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Back"
                        android:textColor="#fff"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btncontinue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="8dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="8dp"
                        android:text="Continue"
                        android:textColor="#fff"
                        android:visibility="gone" />
                    <Button
                        android:id="@+id/verify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Verify"
                        android:textColor="#fff"
                        android:visibility="gone" />
                    <Button
                        android:id="@+id/regbutton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Next"
                        android:textColor="#fff"
                        android:visibility="gone" />
                    <Button
                        android:id="@+id/regbutton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="right"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Next"
                        android:textColor="#fff"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/regbutton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Next"
                        android:textColor="#fff"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/regbutton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="right"
                        android:layout_margin="5dp"
android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/titillium_web"
                        android:padding="5dp"
                        android:text="Next"
                        android:textColor="#fff"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/login_to_login_view"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:clickable="true"
                android:padding="5dp"
                android:text="Have an Account?"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/login_to_forgot_pass_view"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:visibility="gone"
                    android:fontFamily="@font/titillium_web"
                    android:padding="5dp"
                    android:text="@string/to_forgot_password"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/login_to_login_view_pass"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:fontFamily="@font/titillium_web"
                android:padding="5dp"
                android:text="Go Back"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:orientation="vertical"-->
            <!--android:layout_height="wrap_content">-->


            <!--</LinearLayout>-->


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
